<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crystal.addressbook.Tab.Call.KeypadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onClick"
                app:srcCompat="@drawable/delete" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="1"
                app:srcCompat="@drawable/dial1" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="2"
                app:srcCompat="@drawable/dial2" />

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="3"
                app:srcCompat="@drawable/dial3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="4"
                app:srcCompat="@drawable/dial4" />

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="5"
                app:srcCompat="@drawable/dial5" />

            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="6"
                app:srcCompat="@drawable/dial6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn7"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="7"
                app:srcCompat="@drawable/dial7" />

            <ImageButton
                android:id="@+id/btn8"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="8"
                app:srcCompat="@drawable/dial8" />

            <ImageButton
                android:id="@+id/btn9"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="9"
                app:srcCompat="@drawable/dial9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMessage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="Message"
                app:srcCompat="@drawable/message" />

            <ImageButton
                android:id="@+id/btn0"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="0"
                app:srcCompat="@drawable/dial0" />

            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:text="Call"
                app:srcCompat="@drawable/call" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
